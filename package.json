{
  "name": "echoes-of-travian",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --emptyOutDir",
    "serve": "vite preview",
    "lint:check": "npx @biomejs/biome lint",
    "lint": "npx @biomejs/biome lint --fix",
    "format:check": "npx @biomejs/biome format",
    "format": "npx @biomejs/biome format --write",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "prepare": "husky",
    "analyze-bundle": "npx vite-bundle-visualizer"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.0-alpha.26",
    "@tanstack/react-query": "5.59.0",
    "@tanstack/react-query-devtools": "5.59.0",
    "@tanstack/react-query-persist-client": "5.59.0",
    "clsx": "2.1.1",
    "dayjs": "1.11.13",
    "i18next": "23.15.1",
    "moderndash": "3.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.53.0",
    "react-i18next": "15.0.2",
    "react-icons": "5.3.0",
    "react-modal": "3.16.1",
    "react-router-dom": "6.26.2",
    "react-tabs": "6.0.2",
    "react-tooltip": "5.28.0",
    "react-window": "1.8.10",
    "tailwindcss": "^4.0.0-alpha.26",
    "ts-seedrandom": "0.1.0",
    "usehooks-ts": "3.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@testing-library/jest-dom": "6.5.0",
    "@testing-library/react": "16.0.1",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "22.7.4",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.0",
    "@types/react-modal": "^3.16.3",
    "@types/react-window": "1.8.8",
    "@vitejs/plugin-react": "4.3.2",
    "@vitest/web-worker": "2.1.2",
    "happy-dom": "15.7.4",
    "husky": "9.1.6",
    "knip": "5.31.0",
    "lint-staged": "15.2.10",
    "opfs-mock": "1.0.0",
    "postcss": "8.4.47",
    "resize-observer-polyfill": "1.5.1",
    "rollup-plugin-visualizer": "5.12.0",
    "sass-embedded": "1.79.4",
    "typescript": "5.6.2",
    "vite": "5.4.8",
    "vite-bundle-visualizer": "1.2.1",
    "vite-plugin-pwa": "0.20.5",
    "vite-plugin-svgr": "4.2.0",
    "vite-tsconfig-paths": "5.0.1",
    "vitest": "2.1.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": [
      "npm run lint",
      "npm run format"
    ]
  },
  "knip": {
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "entry": [
      "app/index.tsx"
    ],
    "project": [
      "app/**/*.{ts,tsx}"
    ],
    "paths": {
      "app/*": [
        "app/*"
      ],
      "graphics/*": [
        "graphics/*"
      ]
    }
  }
}
